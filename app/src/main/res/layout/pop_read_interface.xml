<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View style="@style/Style.Shadow.Bottom" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@color/background_menu"
        android:paddingTop="8dp">

        <View
            android:id="@+id/vw_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:paddingRight="15dp"
                android:paddingBottom="10dp">

                <com.kunfei.bookshelf.widget.views.ATEStrokeTextView
                    android:id="@+id/nbTextSizeDec"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:layout_weight="3.5"
                    android:gravity="center"
                    android:text="A-"
                    android:textFontWeight="800"
                    android:textSize="14sp"
                    app:cornerRadius="16dp" />

                <TextView
                    android:id="@+id/nbTextSize"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:text="20" />

                <com.kunfei.bookshelf.widget.views.ATEStrokeTextView
                    android:id="@+id/nbTextSizeAdd"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:layout_weight="3.5"
                    android:gravity="center"
                    android:text="A+"
                    android:textFontWeight="800"
                    android:textSize="14sp"
                    app:cornerRadius="16dp" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5" />

                <com.kunfei.bookshelf.widget.views.ATEStrokeTextView
                    android:id="@+id/fl_text_Bold"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:text="@string/text_bold"
                    android:textSize="14sp"
                    app:cornerRadius="16dp" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5" />

                <com.kunfei.bookshelf.widget.views.ATEStrokeTextView
                    android:id="@+id/fl_text_font"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:text="@string/custom_font"
                    android:textSize="14sp"
                    app:cornerRadius="16dp" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5" />

                <com.kunfei.bookshelf.widget.views.ATEStrokeTextView
                    android:id="@+id/fl_indent"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:text="@string/indent"
                    android:textSize="14sp"
                    app:cornerRadius="16dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="@color/btn_bg_press" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingTop="12dp"
                android:paddingRight="15dp"
                android:paddingBottom="10dp">

                <com.kunfei.bookshelf.widget.views.ATEStrokeTextView
                    android:id="@+id/tvPageMode"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:layout_weight="5"
                    android:gravity="center"
                    android:text="@string/page_mode"
                    android:textSize="14sp"
                    app:cornerRadius="16dp"
                    tools:ignore="HardcodedText" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.0" />

                <com.kunfei.bookshelf.widget.views.ATEStrokeTextView
                    android:id="@+id/tvRowDef0"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:text="@string/row_0"
                    android:textSize="14sp"
                    app:cornerRadius="16dp"
                    tools:ignore="HardcodedText" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5" />

                <com.kunfei.bookshelf.widget.views.ATEStrokeTextView
                    android:id="@+id/tvRowDef1"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:text="@string/row_1"
                    android:textSize="14sp"
                    app:cornerRadius="16dp"
                    tools:ignore="HardcodedText" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5" />

                <com.kunfei.bookshelf.widget.views.ATEStrokeTextView
                    android:id="@+id/tvRowDef2"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:text="@string/row_2"
                    android:textSize="14sp"
                    app:cornerRadius="16dp"
                    tools:ignore="HardcodedText" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5" />

                <com.kunfei.bookshelf.widget.views.ATEStrokeTextView
                    android:id="@+id/tvRowDef"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:text="@string/row_def"
                    android:textSize="14sp"
                    app:cornerRadius="16dp"
                    tools:ignore="HardcodedText" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5" />

                <FrameLayout
                    android:layout_width="40dp"
                    android:layout_height="36dp"
                    android:layout_weight="1">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/tvOther"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:contentDescription="@string/custom_mr"
                        android:src="@color/background_menu"
                        android:tooltipText="@string/custom_mr"
                        app:civ_border_color="@color/tv_text_default"
                        app:civ_border_width="1dp"
                        tools:ignore="HardcodedText" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:src="@drawable/ic_add"
                        app:tint="@color/tv_text_default"
                        tools:ignore="NestedWeights" />

                </FrameLayout>

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>
    <View
        android:id="@+id/vwNavigationBar_pri"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/background_menu" />
</LinearLayout>